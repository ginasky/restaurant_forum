<% if @restaurant.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<form class="container form-horizontal">
  <%= form_for [:admin, @restaurant] do |f| %>
    <div class="form-group">
      <label for="exampleInputName2" class="col-sm-2 control-label">
        <%= f.label :name, "Name" %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">
        <%= f.label :tel, "Tel" %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :tel, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="address" class="col-sm-2 control-label">
        <%= f.label :address, "Address" %>
      </label>
      <div class="col-sm-8">
        <%= f.text_area :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="opening_hours" class="col-sm-2 control-label">
        <%= f.label :opening_hours, "Opening hours" %>
      </label>
      <div class="col-sm-8">
        <%= f.text_area :opening_hours, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-sm-2 control-label">
        <%= f.label :description, "Description" %>
      </label>
      <div class="col-sm-8">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">
        <%= f.label :image, "Photo" %>
      </label>
      <div class="col-sm-8">
        <%= image_tag @restaurant.image, width: '300px' if @restaurant.image? %>
        <%= f.file_field :image %>
      </div>
    </div>
      <%= f.submit %>

    <% end %>
</form>
